<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="testForm" type="com.demo.struts1.form.TestForm" />
    </form-beans>

    <action-mappings>
        <action path="/test" type="com.demo.struts1.action.TestAction" name="testForm">
            <forward name="success" path="/WEB-INF/view/test.jsp" />
        </action>
        <action path="/spotifyList" type="com.demo.struts1.action.SpotifyListAction">
            <forward name="success" path="/WEB-INF/view/spotifyList.jsp" />
        </action>
        <action path="/spotifyPagination" type="com.demo.struts1.action.SpotifyListPagination" scope="request" validate="false" input="/WEB-INF/view/spotifyListPagination.jsp">
            <forward name="success" path="/WEB-INF/view/spotifyListPagination.jsp"/>
        </action>
    </action-mappings>

</struts-config>