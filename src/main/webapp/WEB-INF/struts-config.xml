<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="testForm" type="com.demo.struts1.form.TestForm" />
    </form-beans>

    <action-mappings>
        <action path="/test" type="com.demo.struts1.action.TestAction" name="testForm">
            <forward name="success" path="/WEB-INF/view/test.jsp" />
        </action>
        <action path="/spotifyList" type="com.demo.struts1.action.Spotify.SpotifyListAction">
            <forward name="success" path="tiles.spotify.list" />
        </action>
        <action path="/spotifyPagination" type="com.demo.struts1.action.Spotify.SpotifyListPaginationAction" scope="request" validate="false" input="/WEB-INF/view/spotifyListPagination.jsp">
            <forward name="success" path="/WEB-INF/view/spotifyListPagination.jsp"/>
        </action>
    </action-mappings>


    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <!-- ========================= Tiles plugin ===============================-->

    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>


</struts-config>